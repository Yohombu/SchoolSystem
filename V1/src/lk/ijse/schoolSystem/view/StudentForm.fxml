<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="444.0" prefWidth="695.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.schoolSystem.controller.StudentFormController">
    <children>
        <Label alignment="CENTER" layoutY="5.0" prefHeight="41.0" prefWidth="695.0" text="School System">
            <font>
                <Font name="System Bold" size="29.0"/>
            </font>
        </Label>
        <TextField fx:id="txtId" layoutX="7.0" layoutY="46.0" prefHeight="28.0" prefWidth="126.0"
                   promptText="Student id"/>
        <TextField fx:id="txtName" layoutX="143.0" layoutY="46.0" prefHeight="28.0" prefWidth="205.0"
                   promptText="Student Name"/>
        <TextField fx:id="txtAddress" layoutX="460.0" layoutY="46.0" prefHeight="28.0" prefWidth="227.0"
                   promptText="Student Address"/>
        <TextField fx:id="txtAge" layoutX="357.0" layoutY="46.0" prefHeight="28.0" prefWidth="96.0" promptText="Age"/>
        <Button layoutX="627.0" layoutY="82.0" mnemonicParsing="false" onAction="#btnSaveOnAction" prefHeight="28.0"
                prefWidth="59.0" text="Save"/>
        <Button layoutX="544.0" layoutY="82.0" mnemonicParsing="false" onAction="#btnUpdateOnAction" prefHeight="28.0"
                prefWidth="75.0" text="Update"/>
        <Button layoutX="460.0" layoutY="82.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" prefHeight="28.0"
                prefWidth="75.0" text="Delete"/>
        <TableView fx:id="tbl" layoutX="14.0" layoutY="138.0" prefHeight="290.0" prefWidth="667.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="Id"/>
                <TableColumn fx:id="colName" prefWidth="164.0" text="Name"/>
                <TableColumn fx:id="colAddress" prefWidth="336.0" text="Address"/>
                <TableColumn fx:id="colAge" prefWidth="90.0" text="age"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
